<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RealTimeTranslator.UI.ViewModels"
        xmlns:converters="using:RealTimeTranslator.UI.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
        x:Class="RealTimeTranslator.UI.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="リアルタイム字幕翻訳"
        Width="700" Height="500"
        MinWidth="600" MinHeight="400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>

    <Grid>
        <Grid IsVisible="{Binding IsLoading}"
              ZIndex="100"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Background="#1E1E1E">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
                <ProgressBar Height="6" Margin="0,0,0,20" IsIndeterminate="True"/>
                <TextBlock Text="{Binding LoadingMessage}" FontSize="16"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="しばらくお待ちください..." FontSize="12"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <StackPanel Margin="0,20,0,0" IsVisible="{Binding IsDownloading}">
                    <TextBlock Text="{Binding DownloadStatus}" FontSize="12"
                               TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding DownloadReason}" FontSize="11"
                               TextAlignment="Center" TextWrapping="Wrap" Margin="0,0,0,8"/>
                    <ProgressBar Height="6" Value="{Binding DownloadProgress}"
                                 Minimum="0" Maximum="100"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Grid IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
              Margin="20"
              ZIndex="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="リアルタイム字幕翻訳" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="ゲームや動画の音声をリアルタイムで日本語字幕に変換します"
                           Opacity="0.7" Margin="0,5,0,0"/>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="{DynamicResource ThemeBorderMidBrush}" BorderThickness="1"
                    CornerRadius="4" Padding="10">
                <Border.Child>
                    <StackPanel>
                        <TextBlock Text="対象アプリケーション" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <ComboBox Grid.Column="0" ItemsSource="{Binding Processes}"
                                      SelectedItem="{Binding SelectedProcess}"
                                      PlaceholderText="プロセスを選択">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DisplayName}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            <Button Grid.Column="1" Content="更新" Command="{Binding RefreshProcessesCommand}"
                                    Margin="5,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Border.Child>
            </Border>

            <Border Grid.Row="2" BorderBrush="{DynamicResource ThemeBorderMidBrush}" BorderThickness="1"
                    CornerRadius="4" Padding="10" Margin="0,10,0,0">
                <Border.Child>
                    <StackPanel>
                        <TextBlock Text="ステータス" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="12" Height="12" Fill="{Binding StatusColor}" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding StatusText}" FontSize="14"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="処理遅延: "/>
                            <TextBlock Text="{Binding ProcessingLatency, StringFormat=\{0:F0\}ms}"/>
                            <TextBlock Text="  |  翻訳遅延: " Margin="20,0,0,0"/>
                            <TextBlock Text="{Binding TranslationLatency, StringFormat=\{0:F0\}ms}"/>
                        </StackPanel>
                    </StackPanel>
                </Border.Child>
            </Border>

            <StackPanel Grid.Row="3" Orientation="Horizontal"
                        HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="開始" Command="{Binding StartCommand}"
                        IsEnabled="{Binding CanStart}" Width="120" Margin="0,0,5,0"/>
                <Button Content="停止" Command="{Binding StopCommand}"
                        IsEnabled="{Binding IsRunning}" Width="120" Margin="0,0,5,0"/>
                <Button Content="設定" Command="{Binding OpenSettingsCommand}" Width="120"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
