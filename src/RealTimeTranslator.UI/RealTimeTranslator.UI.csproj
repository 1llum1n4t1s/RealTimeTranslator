<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <LLamaSharpCpuVariant Condition="'$(LLamaSharpCpuVariant)' == ''">avx2</LLamaSharpCpuVariant>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\RealTimeTranslator.Core\RealTimeTranslator.Core.csproj" />
    <ProjectReference Include="..\RealTimeTranslator.Translation\RealTimeTranslator.Translation.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.1" />
    <PackageReference Include="NAudio" Version="2.2.1" />
    <PackageReference Include="Velopack" Version="0.0.1298" />
    <PackageReference Include="Whisper.net.Runtime" Version="1.9.0" />
  </ItemGroup>

  <Target Name="FilterLLamaSharpCpuNativeVariants" AfterTargets="ResolveFilesToPublish">
    <PropertyGroup>
      <_LLamaSharpCpuVariant>$(LLamaSharpCpuVariant)</_LLamaSharpCpuVariant>
      <_LLamaSharpCpuVariant Condition="'$(_LLamaSharpCpuVariant)' == ''">avx2</_LLamaSharpCpuVariant>
    </PropertyGroup>
    <ItemGroup>
      <_FilesToRemove Include="@(ResolvedFileToPublish)"
                      Condition="'%(ResolvedFileToPublish.OriginalItemSpec)' != ''
                        and $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('llamasharp.backend.cpu'))
                        and $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes\win-x64\native\'))
                        and !$([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes\win-x64\native\$(_LLamaSharpCpuVariant)\'))" />
    </ItemGroup>
    <ItemGroup>
      <ResolvedFileToPublish Remove="@(_FilesToRemove)" />
    </ItemGroup>
    <Message Text="Filtering LLamaSharp CPU variants, keeping only: $(_LLamaSharpCpuVariant)" Importance="normal" />
    <Message Text="Removing $(@(_FilesToRemove->Count())) files from LLamaSharp CPU variants" Importance="normal" Condition="'@(_FilesToRemove)' != ''" />
  </Target>

</Project>
