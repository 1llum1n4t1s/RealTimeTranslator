<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <UseWPF>true</UseWPF>
    <LLamaSharpCpuVariant Condition="'$(LLamaSharpCpuVariant)' == ''">avx2</LLamaSharpCpuVariant>
    <ErrorOnDuplicatePublishOutputFiles>false</ErrorOnDuplicatePublishOutputFiles>
    <ApplicationIcon>..\..\icon\app.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\RealTimeTranslator.Core\RealTimeTranslator.Core.csproj" />
    <ProjectReference Include="..\RealTimeTranslator.Translation\RealTimeTranslator.Translation.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="10.0.2" />
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="10.0.2" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="10.0.2" />
    <PackageReference Include="Velopack" Version="0.0.1298" />
    <PackageReference Include="Whisper.net.Runtime" Version="1.9.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="settings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="FilterLLamaSharpCpuNativeVariants" AfterTargets="ResolveFilesToPublish">
    <PropertyGroup>
      <_LLamaSharpCpuVariant Condition="'$(LLamaSharpCpuVariant)' != ''">$(LLamaSharpCpuVariant)</_LLamaSharpCpuVariant>
      <_LLamaSharpCpuVariant Condition="'$(_LLamaSharpCpuVariant)' == ''">avx2</_LLamaSharpCpuVariant>
    </PropertyGroup>
    <ItemGroup>
      <ResolvedFileToPublish Remove="@(ResolvedFileToPublish)" Condition="'%(ResolvedFileToPublish.OriginalItemSpec)' != ''&#xD;&#xA;                               and $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').ToLower().Contains('llamasharp.backend.cpu'))&#xD;&#xA;                               and ($([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes\win-x64\native\')) or $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes/win-x64/native/')))&#xD;&#xA;                               and !($([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes\win-x64\native\$(_LLamaSharpCpuVariant)\')) or $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes/win-x64/native/$(_LLamaSharpCpuVariant)/')))" />
    </ItemGroup>
  </Target>

  <Target Name="RemoveNonWindowsRuntimes" AfterTargets="ResolveFilesToPublish">
    <!-- Windows以外のランタイムファイルを削除 -->
    <ItemGroup>
      <ResolvedFileToPublish Remove="@(ResolvedFileToPublish)" Condition="'%(ResolvedFileToPublish.OriginalItemSpec)' != ''&#xD;&#xA;                               and ($([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes\linux')) or&#xD;&#xA;                                    $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes/linux')) or&#xD;&#xA;                                    $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes\osx')) or&#xD;&#xA;                                    $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes/osx')) or&#xD;&#xA;                                    $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes\android')) or&#xD;&#xA;                                    $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes/android')) or&#xD;&#xA;                                    $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes\ios')) or&#xD;&#xA;                                    $([System.String]::Copy('%(ResolvedFileToPublish.OriginalItemSpec)').Contains('runtimes/ios')))" />
    </ItemGroup>
  </Target>

</Project>